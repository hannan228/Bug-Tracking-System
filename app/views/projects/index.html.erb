<h1>list of pojects</h1>

<!DOCTYPE html>
<html>
<head>
    <style>
    table, th, td {
        border: 1px solid black;
    }
    table {
        width: 50%;
        border-collapse: collapse;
        margin-left: 80px;
        margin-top: 20px
    }

    p { 
        margin-left: 80px;   
    }
    
    </style>

        <title></title>
</head>
<body>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>


<tbody>
	<% @project.each do |article| %>
	<tr>
		<td><%= article.title %></td>
		<td><%= article.description %></td>
		<td><%= link_to 'View', project_path(article) %></td>
		<td><%= link_to 'Edit', edit_project_path(article) %></td>
		<td><%= link_to 'Delete', project_path(article), data: { "turbo-method": :delete } %></td>
	</tr>
	<% end %>
</tbody>
</table>

<p>
	<%= link_to 'Create new projects', new_project_path %>
</p>

</body>
</html>


